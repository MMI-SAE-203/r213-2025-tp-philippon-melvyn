---
import { getOffre } from "../../js/backend.mjs";
import Base from "../../layouts/Base.astro";

const { id } = Astro.params;
const offre = await getOffre(id);
if (!offre) {
    return Astro.redirect("/offres");
}
---

<Base titre={offre.nomMaison}>
    <h2>{offre.nomMaison}</h2>
    <div>
        <li>{offre.adresse}</li>
        <li>{offre.surface}</li>
        <li>{offre.prix}</li>
        <li>{offre.nbSdb}</li>
        <li>{offre.nbChambres}</li>
        <li>{offre.favori}</li>
        <li>{offre.created}</li>
        <li>{offre.updated}</li>
        ...
    </div>
</Base>
